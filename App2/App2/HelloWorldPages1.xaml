<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.HelloWorldPages1"
             Title="HelloWorldPage1">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" BackgroundColor="White" Padding="12">
            <Entry x:Name="MainEntry" BackgroundColor="Gray" TextColor="White"/>
            <Grid Padding="0,0,0,50">
                <Button Clicked="Button_OnClick" Text="Click"  VerticalOptions="Center" HorizontalOptions="Center"/>
            </Grid>
            <Label x:Name="txtResult" Text="Hello Xamarin.Forms!" VerticalOptions="Center" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
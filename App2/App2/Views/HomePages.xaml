<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Views.HomePages"
             Title="Trang chủ">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" BackgroundColor="White" Padding="12">
            <Label x:Name="txtPage2" Text="Trang chủ" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Large" TextColor="BlueViolet"/>
            <Entry x:Name="edt1" BackgroundColor="Gray" TextColor="White" Placeholder="Nhập tên" PlaceholderColor="White"/>
            <Entry x:Name="edt2" BackgroundColor="Gray" TextColor="White" Placeholder="Nhập mật khẩu" PlaceholderColor="White"/>
            <Grid Padding="0,0,0,50">
                <Button x:Name="btnClick" Text="Click" BackgroundColor="Chocolate" Clicked="Btn_OnClick"/>
            </Grid>
            <Label x:Name="txtResult1" Text="" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Large" TextColor="BlueViolet"/>
            <Label x:Name="txtResult2" Text="" VerticalOptions="Center" HorizontalOptions="Center" FontSize="Large" TextColor="BlueViolet"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>